<?php

/**
 * @file
 * Contains dgi_actions.module.
 */

use Drupal\Core\Entity\EntityInterface;

/**
 * Implements hook_entity_insert().
 */
function dgi_actions_entity_insert(EntityInterface $entity) {
  $utils = \Drupal::service('dgi_actions.dgiutils');

  // Execute index reactions.
  $utils->executeEntityReactions('\Drupal\dgi_actions\Plugin\ContextReaction\EntityIdentifierInsertReaction', $entity);
}

/**
 * Implements hook_entity_delete().
 */
function dgi_actions_entity_delete(EntityInterface $entity) {
  $utils = \Drupal::service('dgi_actions.dgiutils');

  // Execute index reactions.
  $utils->executeEntityReactions('\Drupal\dgi_actions\Plugin\ContextReaction\EntityIdentifierDeleteReaction', $entity);
}
