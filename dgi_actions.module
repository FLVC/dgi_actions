<?php

/**
 * @file
 * Contains dgi_actions.module.
 */

use Drupal\Core\Entity\EntityInterface;

/**
 * Implements hook_entity_insert().
 */
function dgi_actions_entity_insert(EntityInterface $entity) {
  dgi_actions_execute_entity_identifier_reactions('\Drupal\dgi_actions\Plugin\ContextReaction\EntityIdentifierInsertReaction', $entity);
}

/**
 * Implements hook_entity_delete().
 */
function dgi_actions_entity_delete(EntityInterface $entity) {
  dgi_actions_execute_entity_identifier_reactions('\Drupal\dgi_actions\Plugin\ContextReaction\EntityIdentifierDeleteReaction', $entity);
}

/**
 * Helper function to launch Entity Identifier Reactions.
 */
function dgi_actions_execute_entity_identifier_reactions($reactionType, EntityInterface $entity) {
  $utils = \Drupal::service('dgi_actions.dgiutils');
  $configFactory = \Drupal::service('config.factory');

  $identifiers = $configFactory->listAll('dgi_actions.identifier');

  if ($identifiers) {
    foreach ($identifiers as $identifier) {
      $config = $configFactory->get($identifier);
      $configEntity = ($config) ? $config->get('entity') : NULL;
      $configBundle = ($config) ? $config->get('bundle') : NULL;

      if ($entity->getEntityTypeId() == $configEntity && $entity->bundle() == $configBundle) {
        // Execute index reactions.
        $utils->executeEntityReactions($reactionType, $entity);
      }
    }
  }
}
